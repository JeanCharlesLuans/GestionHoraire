<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/filtre_localisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marge_grande"
        android:text="@string/filtre_localisation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/localisation_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/marge_dropdown"
        app:layout_constraintStart_toStartOf="@+id/filtre_localisation"
        app:layout_constraintTop_toBottomOf="@+id/filtre_localisation" />

    <CheckBox
        android:id="@+id/filtre_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filtre_categorie"
        app:layout_constraintStart_toStartOf="@+id/filtre_localisation"
        app:layout_constraintTop_toBottomOf="@+id/filtre_localisation" />

    <Spinner
        android:id="@+id/categorie_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/marge_dropdown"
        app:layout_constraintStart_toStartOf="@+id/filtre_categorie"
        app:layout_constraintTop_toBottomOf="@+id/filtre_categorie" />

    <CheckBox
        android:id="@+id/filtre_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filtre_open"
        app:layout_constraintStart_toStartOf="@+id/filtre_categorie"
        app:layout_constraintTop_toBottomOf="@+id/filtre_categorie" />

</androidx.constraintlayout.widget.ConstraintLayout>